---
const today = new Date();
const currentYear = today.getFullYear();
---

<footer class="footer has-background-grey-darker has-text-white">
  <div class="container">
    <div class="content has-text-centered">
      <div class="columns is-centered">
        <div class="column is-8">
          <div class="level">
            <div class="level-item">
              <a href="https://github.com/LeCodeEtMoi/Germain" target="_blank" class="has-text-white">
                <span class="icon is-large">
                  <i class="fab fa-github fa-2x"></i>
                </span>
                <span class="is-sr-only">GitHub</span>
              </a>
            </div>
            <div class="level-item">
              <a href="https://m.webtoo.ls/@astro" target="_blank" class="has-text-white">
                <span class="icon is-large">
                  <i class="fab fa-mastodon fa-2x"></i>
                </span>
                <span class="is-sr-only">Mastodon</span>
              </a>
            </div>
          </div>

          <nav class="level is-mobile">
            <div class="level-item">
              <a href="/Germain/aide" class="has-text-white">Participer</a>
            </div>
            <div class="level-item">
              <span class="has-text-grey">•</span>
            </div>
            <div class="level-item">
              <a href="/Germain/CodeDéontologie" class="has-text-white">Code de Déontologie</a>
            </div>
            <div class="level-item">
              <span class="has-text-grey">•</span>
            </div>
            <div class="level-item">
              <a href="/Germain/ui" class="has-text-white">Charte Graphique</a>
            </div>
          </nav>

          <p class="has-text-grey-light">
            &copy; {currentYear} Germain - Tous droits réservés
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>

<!-- Font Awesome pour les icônes -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
  .footer {
    padding: 3rem 1.5rem;
  }
  .footer a:hover {
    color: #f5f5f5 !important;
    text-decoration: underline;
  }
  .level-item span.has-text-grey {
    margin: 0 0.75rem;
  }
  @screen md {
    .footer {
      padding: 4rem 1.5rem;
    }
  }
</style>
